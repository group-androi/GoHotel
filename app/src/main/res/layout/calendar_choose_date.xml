<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_85p"
    android:orientation="vertical"
    android:weightSum="3">

    <View
        android:id="@+id/dialog_clock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@drawable/bg_bottom_sheet_hotel_promotion"
        android:padding="@dimen/margin_4">

        <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvButtonLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_cornor_ffebce"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="@string/txt_3_9_right_now"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvButtonRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_cornor_default"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="@string/over_night"
                android:textAlignment="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/layoutButton"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:background="#EAEAEA" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpCalendarFrom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_clock_ok"
            android:layout_below="@id/layoutButton"
            android:background="@color/colorWhite"
            android:visibility="visible" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpCalendarTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_clock_ok"
            android:layout_below="@id/layoutButton"
            android:background="@color/colorWhite"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_clock_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_booking_16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/margin_48"
            android:paddingRight="@dimen/margin_48"
            android:paddingTop="8dp"
            android:text="@string/ok"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</LinearLayout>