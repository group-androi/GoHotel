<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <!--ToolBar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Đăng nhập"
            android:textColor="@color/colorBlack"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="4dp">

            <!--Login-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_qa_white_bg"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--Email-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Số điện thoại">

                            <EditText
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:paddingRight="12dp"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="15dp"
                                android:paddingEnd="12dp"
                                tools:ignore="RtlSymmetry,TextFields" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:id="@+id/imgValidateEmail"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="32dp"
                            android:src="@drawable/cancel"
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="32dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="8dp"
                        android:background="@color/bk_50p" />

                    <!--Password-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mật khẩu">

                            <EditText
                                android:id="@+id/txtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:paddingEnd="12dp"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="15dp"
                                android:paddingRight="12dp" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:id="@+id/imgValidatePassword"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:src="@drawable/cancel"
                            android:visibility="gone"
                            android:layout_marginRight="32dp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                </LinearLayout>

                <!--Login Now-->
                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_login_selector"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Đăng nhập ngay!"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <!--Forgot Password-->
                <TextView
                    android:id="@+id/tvForgotPW"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Bạn đã quên mật khẩu?"
                    android:textSize="12dp" />

            </LinearLayout>

            <!--Create New-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp">

                <!--title create-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="@color/bk_50p"
                        android:layout_marginRight="8dp" />
                    <!--title-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Nhận thêm nhiều khuyến mãi"
                        android:textColor="@color/bk_50p"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="64dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="3dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="@color/bk_50p"
                        android:layout_marginLeft="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/box_qa_org_bg"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Đăng ký tài khoản ngay!"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <EditText
        android:id="@+id/focus"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:hint="@null"
        android:inputType="none">

        <requestFocus />
    </EditText>

    <!--temp-->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>